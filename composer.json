{
    "require": {

        "ramsey/uuid": "^4.5",
        "smarty/smarty": "^4.2",
      "ext-mysqli": "*",
      "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "infection/infection": "^0.26.16"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AppTest\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": false
        }
    },
    "scripts" : {
        "infection": [
            "XDEBUG_MODE=coverage vendor/bin/infection --only-covered"
        ]
    }
}
